@{
    ViewData["Title"] = "Sistema de Estudiantes";
}

<style>
    .home-hero {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #0d6efd11, #0d6efd22);
    }

    .home-card {
        max-width: 800px;
        margin: 0 auto;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1.5rem rgba(0,0,0,.08);
        border: 1px solid #ffffff;
        background: #ffffff;
    }

    .home-icon-circle {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        background-color: #0d6efd11;
        color: #0d6efd;
        margin: 0 auto 1rem auto;
    }

    .home-feature {
        border-radius: .75rem;
        padding: 1rem;
        border: 1px solid rgba(0,0,0,.05);
        background-color: #f8f9fa;
        height: 100%;
    }
</style>

<div class="home-hero">
    <div class="container">
        <div class="home-card p-4 p-md-5">

            <div class="text-center mb-4">
                
                <h1 class="h3 mb-2">Sistema de Gestión de Estudiantes</h1>
                <p class="text-muted mb-0">
                    Administra la información de tus estudiantes de forma sencilla: crea, edita,
                    consulta por ID y visualiza el listado completo.
                </p>
            </div>

            <hr class="my-4" />

            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <div class="home-feature">
                        <h5 class="mb-2">Listado de Estudiantes</h5>
                        <p class="text-muted small mb-3">
                            Ver todos los estudiantes registrados, con opciones para editar y eliminar.
                        </p>
                        <a href="/Estudiante/Index" class="btn btn-primary w-100">
                            Ir al listado
                        </a>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="home-feature">
                        <h5 class="mb-2">Consulta por ID</h5>
                        <p class="text-muted small mb-3">
                            Busca rápidamente un estudiante específico digitando su ID.
                        </p>
                        <a href="/Estudiante/ConsultaPorId" class="btn btn-outline-primary w-100">
                            Consultar por ID
                        </a>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
