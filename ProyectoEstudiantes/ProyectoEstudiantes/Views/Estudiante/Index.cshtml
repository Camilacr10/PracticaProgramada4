@using ProyectoEstudiantesBLL.Dtos
@model List<EstudianteDto>

@{
    ViewData["Title"] = "Estudiantes";
}

<style>
    .estudiantes-header {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 1rem;
        align-items: center;
        margin-bottom: 1.5rem;
    }

        .estudiantes-header h1 {
            margin-bottom: 0;
        }

    .estudiantes-card {
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1.25rem rgba(0,0,0,.05);
        border: 1px solid #eef1f5;
    }
</style>

<div class="container mt-4">

    <div class="estudiantes-header">
        <div>
            <h1 class="h3 mb-1">@ViewData["Title"]</h1>
            <p class="text-muted mb-0">
                Administración de estudiantes registrados en el sistema.
            </p>
        </div>
        <div class="d-flex flex-wrap gap-2">
            <button type="button"
                    class="btn btn-primary"
                    data-bs-toggle="modal"
                    data-bs-target="#modalCrearEstudiante">
                + Crear Nuevo Estudiante
            </button>

            <a href="/Estudiante/ConsultaPorId" class="btn btn-outline-info">
                Consultar Estudiante por ID
            </a>
        </div>
    </div>

    <div class="card estudiantes-card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped align-middle mb-0" id="tablaEstudiantes">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 10%;">Id</th>
                            <th style="width: 30%;">Nombre</th>
                            <th style="width: 30%;">Apellido</th>
                            <th style="width: 15%;">Edad</th>
                            <th style="width: 15%;">Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>

</div>

@await Html.PartialAsync("Edit")   
@await Html.PartialAsync("Create")

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Estudiantes.js" asp-append-version="true"></script>
}
